    <!-- Compressed JavaScript -->
    <script src="foundation/js/vendor/jquery.js"></script>
    <script src="foundation/js/vendor/what-input.js"></script>
    <script src="foundation/js/vendor/foundation.js"></script>

    <script>
    //initializing foundation
      $(document).foundation();
      
      //getting data from json
      $.getJSON("https://api.myjson.com/bins/14uau1", function(data) {
        //creating the dealers variable to be used in appending
        var dealers = data.dealers.map(dealer => {
          let currentDealer = dealer.data;
          let newDiv = document.createElement("div");
          newDiv.setAttribute("id", currentDealer.companyID);
          //tried to add the auto class to get it to be more reactive but doesn't seem
          //to do as much as I wanted. Does do some reacitvity
          newDiv.setAttribute("class", "large-auto");
          newDiv.innerHTML = JSON.stringify(currentDealer);
          console.log(currentDealer);
          return newDiv;
        });

        dealers.map(i => {
          let holder = document.getElementById("dealer");
          holder.appendChild(i);
        });

      });


    </script>
